    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/btnHit"
        style="@style/CategoryStyle"
        android:background="#9805"
        android:layout_marginBottom="20dp"
